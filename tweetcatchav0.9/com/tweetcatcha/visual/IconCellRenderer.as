package com.tweetcatcha.visual {    import fl.controls.listClasses.CellRenderer;    import flash.utils.getDefinitionByName;	import fl.controls.listClasses.ListData;	import fl.controls.listClasses.ICellRenderer;	import flash.text.TextFormat;	import flash.events.*;        public class IconCellRenderer extends CellRenderer implements ICellRenderer {				public var instance;		        public function IconCellRenderer():void {			super();						 // -------------- Attach MovieClip -----------------            instance = new (getDefinitionByName("TweetsBar")); // Create Instance of "MyMovie"            this.addChild(instance);    // Add this instance to the CellRenderer            instance.name = "TweetsBarMc";    // Name this new instance                        // Position Movie in Cell            instance.x = 8;            instance.y = 3;			//instance.width = this.data.Tweets;			        }				/**         * This method returns the style definition object from the CellRenderer class.         */        public static function getStyleDefinition():Object {            return CellRenderer.getStyleDefinition();        }				override protected function drawBackground():void {						var format:TextFormat = new TextFormat();			format.size = 12;            format.color = 0xFFFFFF;			setStyle("textFormat", format);            			super.drawBackground();						if(this.data){				this.addEventListener(Event.ENTER_FRAME, _onData);			}        }				public function _onData($e:Event):void {			//trace("data loaded");			instance.width = this.data.Tweets * 2;			this.removeEventListener(Event.ENTER_FRAME, _onData);		}						    }}