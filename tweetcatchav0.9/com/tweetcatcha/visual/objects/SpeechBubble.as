package com.tweetcatcha.visual.objects {		import flash.display.MovieClip;	import flash.utils.setInterval;	import flash.utils.clearInterval;	import flash.events.*;	import flash.net.navigateToURL;	import flash.net.URLRequest;		import com.caurina.transitions.*;		public class SpeechBubble extends MovieClip {				private var intervalID:uint;		public var user:String;		public var xpos:Number;				public function SpeechBubble() {			alpha = 0;			animateIn();			moreInfo.addEventListener(MouseEvent.MOUSE_OVER, _onMouseOver);			moreInfo.addEventListener(MouseEvent.MOUSE_OUT, _onMouseOut);			moreInfo.addEventListener(MouseEvent.MOUSE_DOWN, _onMouseDown);		}				public function animateIn():void {			Tweener.addTween(this, {alpha:1, time:0.5, transition:"linear"});		}				public function animateOut():void {			intervalID = setInterval(endAnim, 2000);		}				public function endAnim():void {			Tweener.addTween(this, {alpha:0, time:0.5, transition:"linear", onComplete:clearAll});		}				public function clearAll():void {			clearInterval(intervalID);			this.parent.removeChild(this);		}				//events for the more info button		public function _onMouseOver(Event:MouseEvent):void {			Tweener.addTween(moreInfo, {alpha:0.8, time:0.2, transition:"linear"});		}				public function _onMouseOut(Event:MouseEvent):void {			Tweener.addTween(moreInfo, {alpha:1, time:0.2, transition:"linear"});		}				public function _onMouseDown(Event:MouseEvent):void {			//trace("http://www.twitter.com/" + this.user);			var url:URLRequest = new URLRequest("http://www.twitter.com/" + this.user);			navigateToURL(url, "_blank");		}			}}