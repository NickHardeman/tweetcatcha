package com.bruzed.www.twitter {		import flash.display.MovieClip;	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.events.Event;	import flash.display.MovieClip;	import flash.events.IOErrorEvent;		//import tweetr classes	import com.swfjunkie.tweetr.*;	import com.swfjunkie.tweetr.events.*;	import com.swfjunkie.tweetr.data.objects.SearchResultData;		public class TwitterSearch extends MovieClip {		//variable for search query		private var _searchQuery:String;		private var _tweetsLoadedStatus:Boolean = false;		private var _results:Array = new Array();		private var _numResults:uint;						//constructor		public function TwitterSearch(_searchQuery:String) {			this._searchQuery = _searchQuery;			var _tweetr:Tweetr = new Tweetr();			_tweetr.search("" + _searchQuery + "");			_tweetr.addEventListener(TweetEvent.COMPLETE, onSearchComplete);			_tweetr.addEventListener(TweetEvent.FAILED, onFail);		}				//search complete handler		public function onSearchComplete(event:TweetEvent):void {			//trace(event.responseArray.length);			_numResults = event.responseArray.length;			for (var i:uint = 0; i < event.responseArray.length; i++) {				var searchResultData:SearchResultData = event.responseArray[i] as SearchResultData;				//trace("searchResultData = " + searchResultData.text);				_results.push(searchResultData.text);				//trace("---------------------------------------------");			}			_tweetsLoadedStatus = true;			event.target.removeEventListener(Event.COMPLETE, onSearchComplete);		}				//search fail handler		private function onFail(event:TweetEvent):void {			trace("FAILURE TO COMMUNICATE");		}				//status		public function get tweetsLoadedStatus():Boolean {			return _tweetsLoadedStatus;		}				//number of results for the search query		public function get getNumResults():uint {			return _numResults;		}				//resulting tweet		public function get getTweets():Array {			return _results;		}			}}