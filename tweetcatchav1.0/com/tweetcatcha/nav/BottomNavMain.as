package com.tweetcatcha.nav {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.EventDispatcher;		import com.reintroducing.events.CustomEvent;	import com.tweetcatcha.data.Constants;	import com.caurina.transitions.*;		//used as the base class for the bottom Nav .swf	public class BottomNavMain extends EventDispatcher {		private var _mc			:MovieClip;		private var bHidden		:Boolean = false;		private var _sw, _sh	:Number;				public function BottomNavMain($mc:MovieClip) {			_mc = $mc;		}				public function setup():void {			//last24HoursBtn.mouseEnabled = changeDateBtn.mouseEnabled = false;			_mc.nav_mc.changeDateBtn.buttonMode = true;			_mc.nav_mc.changeDateBtn.mouseChildren = false;			_mc.nav_mc.changeDateBtn._txt.text = "Change Date";			_mc.nav_mc.changeDateBtn.addEventListener( MouseEvent.CLICK, _onDateViewClicked, false, 0, true);						_mc.nav_mc.recW_mc.visible = false;			//LIST VIEW			_mc.nav_mc.listViewBtn.buttonMode = true;			_mc.nav_mc.listViewBtn.mouseChildren = false;			_mc.nav_mc.listViewBtn.addEventListener(MouseEvent.MOUSE_DOWN, listViewOnClicked);					}				public function hideNav():void {			Tweener.addTween(_mc, {y:_sh, time:.3, transition:"easeInSine",							 onComplete:function() { bHidden = true; }});		}		public function showNav():void {			Tweener.addTween(_mc, {y:_sh - _mc.nav_mc.recW_mc.height, time:.3, transition:"easeOutSine",							 onComplete:function() { bHidden = false;}});		}				public function onStageResize($w:Number, $h:Number):void {			_sh = $h; _sw = $w;			if (!bHidden) {				_mc.y = $h - 60;			} else {				_mc.y = _sh;			}			_mc.bgRec.width = $w;			_mc.nav_mc.x = ($w * .5) - (_mc.nav_mc.recW_mc.width * .5);		}				public function animateIn():void {					}				private function _onDateViewClicked($e:MouseEvent):void {			dispatchEvent( new Event( Constants.DATE_VIEW_CLICKED ) );		}				//LIST VIEW BTN		public function listViewOnClicked($e:MouseEvent):void {			dispatchEvent(new Event( Constants.LIST_VIEW_CLICKED ) );		}				public function get mc():MovieClip {			return _mc;		}			}}